# Environment Configuration for Basarometer API

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key

# CORS Configuration
ALLOWED_ORIGINS=https://basarometer.org,https://www.basarometer.org

# API Configuration
API_VERSION=2.0.0

# Logging Configuration
LOG_LEVEL=info

# Feature Flags
ENABLE_MAPPING=true
ENABLE_ANALYTICS=true