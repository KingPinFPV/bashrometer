# Bashrometer Production Environment Variables
# Copy this file to .env.prod and fill in the actual values

# Database Configuration
DB_NAME=bashrometer
DB_USER=bashrometer
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=CHANGE_ME_VERY_STRONG_JWT_SECRET_HERE

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend API URL
NEXT_PUBLIC_API_URL=https://yourdomain.com

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# Monitoring (Optional)
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_HERE

# SSL Configuration (if using Let's Encrypt)
DOMAIN=yourdomain.com
EMAIL=your-email@example.com

# Server Configuration
SERVER_NAME=yourdomain.com
CERTBOT_EMAIL=your-email@example.com